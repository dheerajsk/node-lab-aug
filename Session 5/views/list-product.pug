html
    head
        title Products
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css")
    body
        include header.pug
        table(class="table table-dark table-striped")
            thead 
                tr
                    th Name
                    th Details 
                    th Price 
            each product in products 
                tbody 
                    tr
                        td #{product.name}
                        td #{product.detail}
                        td #{product.price}    
